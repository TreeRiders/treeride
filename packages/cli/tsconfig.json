{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "react-jsx",
    "lib": ["ES2020"],
    "baseUrl": ".",
    "module": "ESNext",

    "moduleResolution": "bundler",
    "paths": {
      "@points/*": ["src/points/*"]
    },
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,

    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
